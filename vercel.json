{
  "version": 2,
  "builds": [
    {
      "src": "backend/abacus_project/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    }
  ],
  "outputDirectory": "backend/staticfiles",
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "backend/abacus_project/wsgi.py"
    }
  ]
}